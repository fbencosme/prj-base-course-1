<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/details"
    android:alpha=".8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:paddingTop="10dp"
    tools:visibility="visible"  >

    <TextView
        android:id="@+id/title"
        android:textStyle="bold"
        android:text="@string/loan.detail.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/message"
        android:textStyle="italic"
        android:text="@string/loan.detail.message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/monthlyLbl"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.monthly" />
    <TextView
        android:layout_below="@+id/message"
        android:layout_alignParentRight="true"
        android:id="@+id/monthly"
        tools:text="$10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.monthly" />


    <TextView
        android:id="@+id/timeLbl"
        android:layout_below="@+id/monthlyLbl"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.time" />
    <TextView
        android:layout_below="@+id/monthly"
        android:layout_alignParentRight="true"
        android:id="@+id/time"
        tools:text="$10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.monthly" />


    <TextView
        android:id="@+id/totalLbl"
        android:layout_below="@+id/timeLbl"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.total" />
    <TextView
        android:layout_below="@+id/time"
        android:layout_alignParentRight="true"
        android:id="@+id/total"
        tools:text="$10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.monthly" />


    <TextView
        android:id="@+id/interestLbl"
        android:layout_below="@+id/totalLbl"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.interest" />
    <TextView
        android:layout_below="@+id/total"
        android:layout_alignParentRight="true"
        android:id="@+id/interest"
        tools:text="$10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan.detail.monthly" />

</RelativeLayout>
